<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btn_join_live"
        android:gravity="center"
        android:hint="房间ID" />

    <Button
        android:id="@+id/btn_join_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_leave_live"
        android:text="join_live" />

    <Button
        android:id="@+id/btn_leave_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="leave_live" />

    <View
        android:id="@+id/v_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/ll_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_join_live"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/v_center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_publish_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publish_main" />

        <CheckBox
            android:id="@+id/cb_publish_aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publish_aux" />

        <CheckBox
            android:id="@+id/cb_publish_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publish_third" />

        <CheckBox
            android:id="@+id/cb_publish_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publish_fourth" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_join_live"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/v_center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_play_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play_main" />

        <CheckBox
            android:id="@+id/cb_play_aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play_aux" />

        <CheckBox
            android:id="@+id/cb_play_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play_third" />

        <CheckBox
            android:id="@+id/cb_play_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play_fourth" />
    </LinearLayout>

    <com.zego.expressDemo.view.WH43TextureView
        android:id="@+id/ttv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_publish"
        android:layout_toStartOf="@id/v_center"/>

    <com.zego.expressDemo.view.WH43TextureView
        android:id="@+id/ttv_aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_publish"
        android:layout_toEndOf="@id/v_center"
        android:layout_alignParentEnd="true"/>

    <com.zego.expressDemo.view.WH43TextureView
        android:id="@+id/ttv_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttv_main"
        android:layout_toStartOf="@id/v_center"/>

    <com.zego.expressDemo.view.WH43TextureView
        android:id="@+id/ttv_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttv_main"
        android:layout_toEndOf="@id/v_center"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>