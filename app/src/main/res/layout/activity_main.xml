<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btn_join_live"
            android:gravity="center"
            android:hint="房间ID"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_join_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_leave_live"
            android:text="join_live" />

        <Button
            android:id="@+id/btn_leave_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="leave_live" />

        <View
            android:id="@+id/v_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_join_live"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/v_center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_publish_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="publish_main" />

            <CheckBox
                android:id="@+id/cb_publish_aux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="publish_aux" />

            <CheckBox
                android:id="@+id/cb_publish_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="publish_third"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_publish_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="publish_fourth"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_join_live"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/v_center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_play_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play_main" />

            <CheckBox
                android:id="@+id/cb_play_aux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play_aux" />

            <CheckBox
                android:id="@+id/cb_play_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play_third"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_play_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play_fourth"
                android:visibility="gone" />
        </LinearLayout>

        <com.zego.expressDemo.view.WH43TextureView
            android:id="@+id/ttv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_publish"
            android:layout_toStartOf="@id/v_center" />

        <com.zego.expressDemo.view.WH43TextureView
            android:id="@+id/ttv_aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_publish"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/v_center" />

        <com.zego.expressDemo.view.WH43TextureView
            android:id="@+id/ttv_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttv_main"
            android:layout_toStartOf="@id/v_center" />

        <com.zego.expressDemo.view.WH43TextureView
            android:id="@+id/ttv_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttv_main"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/v_center" />

        <com.zego.expressDemo.view.WH43TextureView
            android:id="@+id/ttv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttv_third"
            android:layout_toStartOf="@id/v_center" />

        <Button
            android:id="@+id/btn_change_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttv_preview"
            android:text="changeResolution" />

        <Button
            android:id="@+id/btn_switch_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttv_preview"
            android:layout_alignParentEnd="true"
            android:text="switchMirror" />

        <Button
            android:id="@+id/btn_delete_cdn_publish2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_change_resolution"
            android:layout_alignParentEnd="true"
            android:text="deleteCdnPublish2" />

        <Button
            android:id="@+id/btn_add_cdn_publish2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_change_resolution"
            android:layout_alignParentStart="true"
            android:text="addCdnPublish2" />

        <Button
            android:id="@+id/btn_delete_cdn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_cdn_publish2"
            android:layout_alignParentEnd="true"
            android:text="deleteCdnPublish" />

        <Button
            android:id="@+id/btn_add_cdn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_cdn_publish2"
            android:layout_alignParentStart="true"
            android:text="addCdnPublish" />

        <Button
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_cdn_publish"
            android:layout_alignParentEnd="true"
            android:text="switchCamera" />

        <Button
            android:id="@+id/btn_audio_observer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_cdn_publish"
            android:layout_alignParentStart="true"
            android:text="audioObserver" />
    </RelativeLayout>
</ScrollView>